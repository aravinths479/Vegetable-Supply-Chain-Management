<%- include('partials/header') %> 
<%- include('partials/navbar') %>

<br><br><br><br><br>


<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" data-bs-toggle="tab" href="#Sell" aria-selected="true" role="tab">Sell Requests</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" data-bs-toggle="tab" href="#Buy" aria-selected="false" role="tab" tabindex="-1">Buy Requests</a>
    </li>
    
  </ul>
  <div id="myTabContent" class="tab-content">
    <br>
    <div class="tab-pane fade active show" id="Sell" role="tabpanel">

        <table class="table  table-striped">
            <thead>
                <tr>
                  
                  <th scope="col">Date</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Price Per KG</th>
                  <th scope="col">Location</th>
                </tr>
              </thead>
              <tbody>
                <% sellData.forEach(function(s) { %>
                <tr>
                  
                  <td><%= s.timestamp %></td>
                  <td><%= s.quantity %></td>
                  <td><%= s.pricePerKg %></td>
                  <td><%= s.location %></td>
                </tr>
                <% }); %>
              </tbody>
          </table>


          </div>
    <div class="tab-pane fade" id="Buy" role="tabpanel">
        <table class="table  table-striped">
            <thead>
                <tr>
      
                  <th scope="col">Date</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Location</th>
                </tr>
              </thead>
              <tbody>
                <% buyData.forEach(function(b) { %>
                <tr>
            
                  <td><%= b.timestamp %></td>
                  <td><%= b.quantity %></td>
                  <td><%= b.location %></td>
                </tr>
                <% }); %>
              </tbody>
          </table>    </div>
    
  </div>






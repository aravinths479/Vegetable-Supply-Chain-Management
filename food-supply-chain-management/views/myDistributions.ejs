<%- include('partials/header') %> 
<%- include('partials/navbar') %>

<br><br><br><br><br>


<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" data-bs-toggle="tab" href="#Sell" aria-selected="true" role="tab">Sell Requests</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" data-bs-toggle="tab" href="#Buy" aria-selected="false" role="tab" tabindex="-1">Buy Requests</a>
    </li>
    
  </ul>
  <div id="myTabContent" class="tab-content">
    <br>
    <div class="tab-pane fade active show" id="Sell" role="tabpanel">

      <table class="table">
        <thead>
            <tr>
            
                <th>Seller Location</th>
                <th>Buyer User ID</th>
                <th>Buyer Name</th>
                <th>Buyer Location</th>
                <th>Allocated Tomatoes</th>
            </tr>
        </thead>
        <tbody>
            <% sell.forEach((allocation) => { %>
              
                <tr>
            
                    <td><%= allocation.sellerLocation %></td>
                    <td>
                      <a href="/distribute/user/<%= allocation.buyerUserId %>" >
                      <%= allocation.buyerUserId %>
                      </a>
                    </td>
                    <td><%= allocation.buyerName %></td>
                    <td><%= allocation.buyerLocation %></td>
                    <td><%= allocation.allocatedTomatoes %> Kg</td>
                </tr>
                
            <% }); %>
        </tbody>
    </table>


          </div>
    <div class="tab-pane fade" id="Buy" role="tabpanel">
      <table class="table table-bordered">
        <thead>
          
            <tr>
               
                <th>Seller Location</th>
                <th>Buyer User ID</th>
                <th>Buyer Name</th>
                <th>Buyer Location</th>
                <th>Allocated Tomatoes</th>
            </tr>
          
        </thead>
        <tbody>
            <% buy.forEach((allocation) => { %>
                <tr>
                  
                    <td><%= allocation.sellerLocation %> </td>
                    <td>
                      <a href="/distribute/user/<%= allocation.buyerUserId %>" target="_blank">
                        <%= allocation.buyerUserId %>
                      </a>
                   </td>
                    <td><%= allocation.buyerName %> </td>
                    <td><%= allocation.buyerLocation %> </td>
                    <td><%= allocation.allocatedTomatoes %> Kg </td>
                </tr>
   

            <% }); %>
        </tbody>
    </table>    </div>
    
  </div>





